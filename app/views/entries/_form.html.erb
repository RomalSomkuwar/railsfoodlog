<%= form_with(model: entry, local: true) do |form| %>
  <% if entry.errors.any? %>

    <div class="message is-danger">
      <div class="message-header">
      <p><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</p>
    </div>

    <div class="message-body">
      <ul>
        <% entry.errors.full_message.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :meal_type, style: "display: block", class: "label" %>
    <%= form.text_field :meal_type, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :calories, style: "display: block" ,class: "label" %>
    <%= form.number_field :calories, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :protiens, style: "display: block",  class: "label" %>
    <%= form.number_field :protiens, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :carbohydrates, style: "display: block", class: "label" %>
    <%= form.number_field :carbohydrates, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :fats, style: "display: block", class: "label" %>
    <%= form.number_field :fats, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :category_id, style: "display: block", class: "label" %>
    <%= form.select :category_id, Category.all.collect {|u| [u.title, u.id]}, {}, class: "select" %>
  </div>

  <div class="actions">
    <%= form.submit class: "button is-success" %>
  </div>
<% end %>
