<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_fs(:nice_date) %>
<% end %>

<%= render @entry %>

<div class="column is-mobile">
  <div class="column">
  <%= link_to "Edit", edit_entry_path(@entry), class: "button is-grey" %> 
  <%= link_to "Back", entries_path, class: "button is-grey" %>

  <%= button_to "Delete", @entry, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "button is-grey" %>
</div>
</div>
